@model Bootcamp

<h2>Bootcamp Güncelle</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Bootcamp" asp-action="Edit" method="post">
        <input type="hidden" asp-for="BootcampId">
        <div class="mb-3">
            <label asp-for="Baslik" class="form-label"></label>
            <input asp-for="Baslik" class="form-control">
        </div>
            <div class="mb-3">
            <label asp-for="EgitmenId" class="form-label">Eğitmen</label>
            <select asp-for="EgitmenId" asp-items="ViewBag.Egitmenler" class="form-select">
                <option value="">Seçiniz</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr>
        <ul>
            @foreach(var item in Model.BootcampKayit){
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
</div>
