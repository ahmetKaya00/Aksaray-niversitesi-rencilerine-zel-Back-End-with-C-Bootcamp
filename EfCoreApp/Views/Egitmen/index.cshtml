@model IEnumerable<Egitmen>

<h2>Öğrenci Listesi</h2>
<a href="Egitmen/Create" class="btn btn-primary">Eğitmen Ekle</a>
<hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 100px;">@Html.DisplayNameFor(m => m.EgitmenId)</th>
                <th>@Html.DisplayNameFor(m => m.Ad)</th>
                <th>@Html.DisplayNameFor(m => m.Soyad)</th>
                <th>@Html.DisplayNameFor(m => m.BaslamaTarihi)</th>
                <th style="width: 150px;">Ayarlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var egitmen in Model){
                <tr>
                    <td>@Html.DisplayFor(modelItem => egitmen.EgitmenId)</td>
                    <td>@Html.DisplayFor(modelItem => egitmen.Ad)</td>
                    <td>@Html.DisplayFor(modelItem => egitmen.Soyad)</td>
                    <td>@Html.DisplayFor(modelItem => egitmen.BaslamaTarihi)</td>
                    <td>
                        <a asp-controller="Egitmen" asp-action="Edit" asp-route-id="@egitmen.EgitmenId" class="btn btn-primary">Edit</a>
                        <a asp-controller="Egitmen" asp-action="Delete" asp-route-id="@egitmen.EgitmenId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>